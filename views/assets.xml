<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="alhadidi_assets" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link href="/alhadidi_store/static/src/css/fonts.css" rel="stylesheet"/>
            <link href="/alhadidi_store/static/src/css/custom.css" rel="stylesheet"/>
            <link t-if="lang_direction == 'rtl'" href="/alhadidi_store/static/src/css/rtl.css" rel="stylesheet"/>

		    
        </xpath>
    </template>

    <template id="alhadidi_product_slider_assets" inherit_id="website.assets_frontend" priority="18">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/alhadidi_store/static/src/js/theme_front.js"/> 
        </xpath>
    </template>
</odoo>